<routes xmlns="http://camel.apache.org/schema/spring"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <route id="tcpClient">
        <from uri="timer:foo?period=5000"/>
        <setBody>
            <simple>0009Hello</simple>
        </setBody>
        <doTry>
            <to uri="netty:tcp://localhost:8080?sync=true&amp;encoders=#fixedLengthEncoder&amp;decoders=#fixedLengthDecoder&amp;requestTimeout=30000"/>
            <to uri="log:received?showAll=true"/>
            <doCatch>
                <exception>java.net.SocketTimeoutException</exception>

                <to uri="log:timeout?level=ERROR"/>
                <transform>
                    <constant>Timeout occurred</constant>
                </transform>
            </doCatch>
        </doTry>
    </route>
</routes>
